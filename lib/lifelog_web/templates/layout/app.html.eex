<!DOCTYPE html>
<html lang="en" class="w-full h-full overflow-hidden">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Lifelog Â· Phoenix Framework</title>
  <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>" />
</head>

<body class="flex flex-row antialiased w-full h-full overflow-hidden">
  <%= render LifelogWeb.SharedView, "sidebar.html", assigns %>
  <main role="main" class="flex-1 w-full h-full overflow-y-auto">
    <div class="container py-10">
      <!-- Alert Info -->
      <%= if get_flash(@conn, :info) do %>
      <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3" role="alert">
        <!-- TODO: Alert Icon -->
        <p role="alert"><%= get_flash(@conn, :info) %></p>
      </div>
      <% end %>

      <!-- Alert Danger -->
      <%= if get_flash(@conn, :error) do %>
      <div class="flex items-center bg-red-500 text-white text-sm font-bold px-4 py-3" role="alert">
        <!-- TODO: Danger Icon -->
        <p role="alert"><%= get_flash(@conn, :error) %></p>
      </div>
      <% end %>

      <%= render @view_module, @view_template, assigns %>
    </div>
  </main>
  <script type="text/javascript" src='<%= Routes.static_path(@conn, "/js/app.js") %>''></script>
  </body>
</html>